{
	"name": "ai-ide-bas",
	"displayName": "AI IDE BAS",
	"description": "IDE for analysts and architects",
	"publisher": "8eton",
	"version": "0.1.1",
	"icon": "assets/icons/bas-logo.png",
	"aiKey": "InstrumentationKey=e8a16c83-dab4-48d4-bf92-408c9e579a85",
	"galleryBanner": {
		"color": "#617A91",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.84.0",
		"node": "20.19.2"
	},
	"author": {
		"name": "8eton"
	},
	"extensionPack": [
		"jebbs.plantuml",
		"shd101wyy.markdown-preview-enhanced",
		"redhat.vscode-yaml",
		"42Crunch.vscode-openapi",
		"cweijan.dbclient-jdbc",
		"mhutchie.git-graph",
		"asyncapi.asyncapi-preview",
		"EchoAPI.echoapi-for-vscode",
		"GitHub.codespaces",
		"GitHub.remotehub",
		"bierner.markdown-mermaid",
		"ms-vscode.live-server",
		"MS-CEINTL.vscode-language-pack-ru"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/santouch88/ide-bas-extension"
	},
	"homepage": "https://github.com/santouch88/ide-bas-extension",
	"categories": [
		"AI",
		"Chat",
		"Programming Languages",
		"Education",
		"Snippets",
		"Testing"
	],
	"keywords": [
		"cline",
		"claude",
		"dev",
		"mcp",
		"openrouter",
		"coding",
		"agent",
		"autonomous",
		"chatgpt",
		"sonnet",
		"ai",
		"llama",
		"roo code",
		"roocode"
	],
	"activationEvents": [
		"onLanguage",
		"onStartupFinished",
		"onUri"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ai-ide-bas-ActivityBar",
					"title": "%views.activitybar.title%",
					"icon": "assets/icons/bas-logo.svg"
				}
			]
		},
		"views": {
			"ai-ide-bas-ActivityBar": [
				{
					"type": "webview",
					"id": "ai-ide-bas.SidebarProvider",
					"name": "%views.sidebar.name%"
				}
			]
		},
		"commands": [
			{
				"command": "ai-ide-bas.showWelcome",
				"title": "Показать приветственную страницу",
				"icon": "$(home)"
			},
			{
				"command": "ai-ide-bas.openAIIDE",
				"title": "Открыть AI IDE BAS",
				"icon": "$(robot)"
			},
			{
				"command": "ai-ide-bas.exportMarkdownToPdf",
				"title": "Export Markdown to PDF (with watermark)",
				"category": "Markdown"
			},
			{
				"command": "ai-ide-bas.exportRoleInstructions",
				"title": "Экспортировать инструкции роли в .roo",
				"category": "%configuration.title%",
				"icon": "$(cloud-download)"
			},
			{
				"command": "ai-ide-bas.exportAllRoleRules",
				"title": "Экспортировать все правила ролей в .roo",
				"category": "%configuration.title%",
				"icon": "$(cloud-download)"
			},
			{
				"command": "ai-ide-bas.plusButtonClicked",
				"title": "%command.newTask.title%",
				"icon": "$(add)"
			},
			{
				"command": "ai-ide-baspromptsButtonClicked",
				"title": "%command.prompts.title%",
				"icon": "$(organization)"
			},
			{
				"command": "ai-ide-bas.filesButtonClicked",
				"title": "Работа с файлами",
				"icon": "$(files)"
			},
			{
				"command": "ai-ide-bas.mcpButtonClicked",
				"title": "%command.mcpServers.title%",
				"icon": "$(server)"
			},
			{
				"command": "ai-ide-bas.historyButtonClicked",
				"title": "%command.history.title%",
				"icon": "$(history)"
			},
			{
				"command": "ai-ide-bas.marketplaceButtonClicked",
				"title": "%command.marketplace.title%",
				"icon": "$(extensions)"
			},
			{
				"command": "ai-ide-bas.popoutButtonClicked",
				"title": "%command.openInEditor.title%",
				"icon": "$(link-external)"
			},
			{
				"command": "ai-ide-bas.accountButtonClicked",
				"title": "Account",
				"icon": "$(account)"
			},
			{
				"command": "ai-ide-bas.settingsButtonClicked",
				"title": "%command.settings.title%",
				"icon": "$(settings-gear)"
			},
			{
				"command": "ai-ide-bas.openInNewTab",
				"title": "%command.openInNewTab.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.explainCode",
				"title": "%command.explainCode.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.fixCode",
				"title": "%command.fixCode.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.improveCode",
				"title": "%command.improveCode.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.addToContext",
				"title": "%command.addToContext.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.newTask",
				"title": "%command.newTask.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.terminalAddToContext",
				"title": "%command.terminal.addToContext.title%",
				"category": "Terminal"
			},
			{
				"command": "ai-ide-bas.terminalFixCommand",
				"title": "%command.terminal.fixCommand.title%",
				"category": "Terminal"
			},
			{
				"command": "ai-ide-bas.terminalExplainCommand",
				"title": "%command.terminal.explainCommand.title%",
				"category": "Terminal"
			},
			{
				"command": "ai-ide-bas.setCustomStoragePath",
				"title": "%command.setCustomStoragePath.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.importSettings",
				"title": "%command.importSettings.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.focusInput",
				"title": "%command.focusInput.title%",
				"category": "%configuration.title%"
			},
			{
				"command": "ai-ide-bas.acceptInput",
				"title": "%command.acceptInput.title%",
				"category": "%configuration.title%"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "ai-ide-bas.openAIIDE",
					"title": "AI IDE BAS: Открыть AI IDE BAS"
				}
			],
			"editor/context": [
				{
					"submenu": "ai-ide-bas.contextMenu",
					"group": "1"
				},
				{
					"command": "ai-ide-bas.exportMarkdownToPdf",
					"when": "resourceLangId == markdown",
					"group": "navigation@99"
				}
			],
			"editor/title/context": [
				{
					"command": "ai-ide-bas.exportMarkdownToPdf",
					"when": "resourceLangId == markdown"
				}
			],
			"ai-ide-bas.contextMenu": [
				{
					"command": "ai-ide-bas.addToContext",
					"group": "1_actions@1"
				},
				{
					"command": "ai-ide-bas.explainCode",
					"group": "1_actions@2"
				},
				{
					"command": "ai-ide-bas.improveCode",
					"group": "1_actions@3"
				}
			],
			"terminal/context": [
				{
					"submenu": "ai-ide-bas.terminalMenu",
					"group": "2"
				}
			],
			"ai-ide-bas.terminalMenu": [
				{
					"command": "ai-ide-bas.terminalAddToContext",
					"group": "1_actions@1"
				},
				{
					"command": "ai-ide-bas.terminalFixCommand",
					"group": "1_actions@2"
				},
				{
					"command": "ai-ide-bas.terminalExplainCommand",
					"group": "1_actions@3"
				}
			],
			"view/title": [
				{
					"command": "ai-ide-bas.plusButtonClicked",
					"group": "navigation@1",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.marketplaceButtonClicked",
					"group": "navigation@2",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.settingsButtonClicked",
					"group": "navigation@3",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.filesButtonClicked",
					"group": "navigation@3.5",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.accountButtonClicked",
					"group": "navigation@4",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.historyButtonClicked",
					"group": "overflow@1",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.promptsButtonClicked",
					"group": "overflow@2",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.mcpButtonClicked",
					"group": "overflow@3",
					"when": "view == ai-ide-bas.SidebarProvider"
				},
				{
					"command": "ai-ide-bas.popoutButtonClicked",
					"group": "overflow@4",
					"when": "view == ai-ide-bas.SidebarProvider"
				}
			],
			"editor/title": [
				{
					"command": "ai-ide-bas.plusButtonClicked",
					"group": "navigation@1",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.marketplaceButtonClicked",
					"group": "navigation@2",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.settingsButtonClicked",
					"group": "navigation@3",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.filesButtonClicked",
					"group": "navigation@3.5",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.accountButtonClicked",
					"group": "navigation@4",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.historyButtonClicked",
					"group": "overflow@1",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.promptsButtonClicked",
					"group": "overflow@2",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.mcpButtonClicked",
					"group": "overflow@3",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				},
				{
					"command": "ai-ide-bas.popoutButtonClicked",
					"group": "overflow@4",
					"when": "activeWebviewPanelId == ai-ide-bas.TabPanelProvider"
				}
			]
		},
		"submenus": [
			{
				"id": "ai-ide-bas.contextMenu",
				"label": "%views.contextMenu.label%"
			},
			{
				"id": "ai-ide-bas.terminalMenu",
				"label": "%views.terminalMenu.label%"
			}
		],
		"configuration": {
			"title": "%configuration.title%",
			"properties": {
				"ai-ide-bas.allowedCommands": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"npm test",
						"npm install",
						"tsc",
						"git log",
						"git diff",
						"git show"
					],
					"description": "%commands.allowedCommands.description%"
				},
				"ai-ide-bas.deniedCommands": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "%commands.deniedCommands.description%"
				},
				"ai-ide-bas.commandExecutionTimeout": {
					"type": "number",
					"default": 0,
					"minimum": 0,
					"maximum": 600,
					"description": "%commands.commandExecutionTimeout.description%"
				},
				"ai-ide-bas.commandTimeoutAllowlist": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "%commands.commandTimeoutAllowlist.description%"
				},
				"ai-ide-bas.preventCompletionWithOpenTodos": {
					"type": "boolean",
					"default": false,
					"description": "%commands.preventCompletionWithOpenTodos.description%"
				},
				"ai-ide-bas.vsCodeLmModelSelector": {
					"type": "object",
					"properties": {
						"vendor": {
							"type": "string",
							"description": "%settings.vsCodeLmModelSelector.vendor.description%"
						},
						"family": {
							"type": "string",
							"description": "%settings.vsCodeLmModelSelector.family.description%"
						}
					},
					"description": "%settings.vsCodeLmModelSelector.description%"
				},
				"ai-ide-bas.customStoragePath": {
					"type": "string",
					"default": "",
					"description": "%settings.customStoragePath.description%"
				},
				"ai-ide-bas.enableCodeActions": {
					"type": "boolean",
					"default": true,
					"description": "%settings.enableCodeActions.description%"
				},
				"ai-ide-bas.autoImportSettingsPath": {
					"type": "string",
					"default": "",
					"description": "%settings.autoImportSettingsPath.description%"
				},
				"roo-cline.useAgentRules": {
					"type": "boolean",
					"default": true,
					"description": "%settings.useAgentRules.description%"
				},
				"ai-ide-bas.trustedDomains": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"youtube.com",
						"www.youtube.com",
						"telegra.ph",
						"telegraph.com",
						"api.aiidebas.com"
					],
					"description": "Список доменов, которые будут открываться без диалога подтверждения"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint . --ext=ts --max-warnings=0",
		"check-types": "tsc --noEmit",
		"pretest": "turbo run bundle --cwd ..",
		"test": "vitest run",
		"format": "prettier --write .",
		"bundle": "node esbuild.mjs",
		"vscode:prepublish": "pnpm bundle --production",
		"vsix": "mkdirp ../bin && vsce package --no-dependencies --out ../bin",
		"publish:marketplace": "vsce publish --no-dependencies && ovsx publish --no-dependencies",
		"watch:bundle": "pnpm bundle --watch",
		"watch:tsc": "cd .. && tsc --noEmit --watch --project src/tsconfig.json",
		"clean": "rimraf README.md CHANGELOG.md LICENSE dist mock .turbo"
	},
